# ===================
# Database
# ===================
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=change_this_secure_password_here

# ===================
# Strapi Secrets (generate with: openssl rand -base64 32)
# ===================
APP_KEYS=key1,key2,key3,key4  # Generate with: openssl rand -base64 32
API_TOKEN_SALT=base64_string  # Generate with: openssl rand -base64 32
ADMIN_JWT_SECRET=base64_string  # Generate with: openssl rand -base64 32
TRANSFER_TOKEN_SALT=base64_string  # Generate with: openssl rand -base64 32
JWT_SECRET=base64_string  # Generate with: openssl rand -base64 32

# ===================
# Public URLs
# ===================
PUBLIC_API_URL=https://yourdomain.com  # Public API base (e.g. https://geosolutions.nz)
PUBLIC_IMAGE_URL=https://yourdomain.com  # Public image base (uploads)
PUBLIC_SITE_URL=https://yourdomain.com  # Public site URL

# ===================
# Cloudflare Tunnel
# ===================
CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token

# ===================
# Email (SendGrid)
# ===================
SENDGRID_API_KEY=your_sendgrid_api_key

# ===================
# Node Environment
# ===================
NODE_ENV=production
