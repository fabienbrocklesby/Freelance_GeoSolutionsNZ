---
import { fetchAPI, getImageUrl } from "../lib/api.js";

const data = await fetchAPI("projects?populate=thumbnail&sort=createdAt:desc");
const projects = data?.data?.map((project) => ({
  id: project.id,
  slug: project.attributes.slug || project.id,
  title: project.attributes.title,
  description: project.attributes.description,
  thumbnailUrl: getImageUrl(project.attributes.thumbnail?.data?.attributes?.url),
})) || [];
---

{projects.length > 0 && (
  <section id="projects" class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-primary mb-4">Our Projects</h2>
        <p class="text-lg text-gray-600">
          Explore our previous work and accomplishments
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
          <a
            href={`/projects/${project.slug}`}
            class="group block bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl hover:scale-105 transition-all duration-300"
          >
            <div class="relative h-48 overflow-hidden">
              <img
                src={project.thumbnailUrl}
                alt={project.title}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
              />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-primary mb-2 group-hover:text-primary-focus transition-colors">
                {project.title}
              </h3>
              <p class="text-gray-600 line-clamp-3">
                {project.description}
              </p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
)}
