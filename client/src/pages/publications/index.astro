---
import Layout from "../../layouts/DefaultLayout.astro";

const response = await fetch("http://localhost:1337/api/documents/");

const { data: documents } = await response.json();

console.log(documents);
---

<Layout title="publications">
	<div class="flex justify-center">
		<ul class="w-full max-w-4xl space-y-4 px-4">
			{
				documents.map((document) => (
					<li class="card bg-base-100 shadow-lg border border-neutral rounded-lg">
						<div class="card-body p-6">
							<h2 class="text-2xl font-semibold text-primary mb-2">
								{document.attributes.title}
							</h2>
							<p class="text-gray-600">{document.attributes.description}</p>
						</div>
					</li>
				))
			}
		</ul>
	</div>
</Layout>
